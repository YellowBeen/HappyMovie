<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.yellobeansoft.happymovie.AboutActivity"
    android:background="@color/all_stoke">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/all_bg">

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/btnExit"
            android:background="@drawable/ic_exit"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="62dp"
            android:id="@+id/imgLogo"
            android:background="@drawable/ic_cyst_logo"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/btnExit"
            android:layout_alignEnd="@+id/txtVersion"
            android:layout_centerHorizontal="true"
            android:layout_alignRight="@+id/txtVersion"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version"
            android:id="@+id/txtVersion"
            android:layout_below="@+id/imgLogo"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lastupdated"
            android:id="@+id/txtLastUpd"
            android:layout_below="@+id/txtVersion"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feature"
            android:id="@+id/txtFeature"
            android:layout_below="@+id/txtLastUpd"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>
</RelativeLayout>
